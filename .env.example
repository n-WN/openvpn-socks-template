# Compose will read variables from a .env file placed next to compose.yml
# Copy this to .env and fill in values as needed.

# Exposes container's SOCKS5 port to host port
EXPOSE_SOCKS5_PORT=1080

# SOCKS5 settings inside container
SOCKS5_PORT=1080
SOCKS5_BIND=0.0.0.0
# Optional auth for SOCKS5
SOCKS5_USER=
SOCKS5_PASS=

# Optional: if your OpenVPN server requires username/password
OPENVPN_AUTH_USER=
OPENVPN_AUTH_PASS=
# Extra args passed to openvpn (space separated)
OPENVPN_EXTRA_ARGS=--verb 3 --auth-nocache

# Logging & verbosity
OPENVPN_LOG=/var/log/openvpn.log
OPENVPN_VERB=3
# Stream OpenVPN log to docker logs (0=off, 1=on). Lines: +1 streams entire file; or set a number (e.g. 200)
STREAM_OPENVPN_LOG=0
STREAM_OPENVPN_LOG_LINES=+1
# SOCKS logging: allowed values e.g. "error" or "connect error"
SOCKS_LOG=error
SOCKS_MAX_CONN=50

# Healthcheck mode
HEALTHCHECK_STRICT=0

# DNS behavior
# Use DNS pushed by the OpenVPN server (parsed from dhcp-option in the log)
USE_VPN_DNS=1
# Optional fallback if server doesn't push DNS, comma-separated
VPN_DNS=
